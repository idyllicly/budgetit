<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.home.EditExpenseDialogFragment">

    <!-- Expense Name -->
    <EditText
        android:id="@+id/etExpenseName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Expense Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="12dp"
        android:layout_marginBottom="15dp"
        android:textColor="#000"
        android:background="@drawable/rounded_edittext"
        />

    <!-- Amount -->
    <EditText
        android:id="@+id/etExpenseAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Amount"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etExpenseName"
        android:padding="15dp"
        android:layout_marginBottom="12dp"
        android:textColor="#000"
        android:background="@drawable/rounded_edittext"/>

    <!-- Category -->
    <EditText
        android:id="@+id/etExpenseCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etExpenseAmount"
        android:padding="12dp"
        android:layout_marginBottom="15dp"
        android:textColor="#000"
        android:background="@drawable/rounded_edittext"/>

    <!-- Date -->
    <EditText
        android:id="@+id/etExpenseDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etExpenseCategory"
        android:padding="12dp"
        android:layout_marginBottom="15dp"
        android:textColor="#000"
        android:background="@drawable/rounded_edittext"/>

    <!-- Description -->
    <EditText
        android:id="@+id/etExpenseDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etExpenseDate"
        android:padding="12dp"
        android:layout_marginBottom="24dp"
        android:textColor="#000"
        android:background="@drawable/rounded_edittext"/>

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSaveExpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Expense"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etExpenseDescription"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="#fff"
        android:backgroundTint="@color/colorPrimary"/>
</androidx.constraintlayout.widget.ConstraintLayout>
